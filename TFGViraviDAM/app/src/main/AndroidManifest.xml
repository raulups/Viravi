<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.tfgviravidam">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/viravi__1__removebg_preview"
        android:label="@string/app_name"
        android:roundIcon="@drawable/viravi__1__removebg_preview"
        android:supportsRtl="true"
        android:theme="@style/Theme.TFGViraviDam"
        tools:targetApi="31">
        <activity
            android:name=".features.app.ui.fragments.NewEventActivity"
            android:exported="false" />
        <activity
            android:name=".features.app.ui.fragments.ViraviActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".AppActivity"
            android:exported="false" />
        <activity
            android:name=".features.app.ui.fragments.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".features.app.ui.fragments.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>